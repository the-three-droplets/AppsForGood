<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/top_navbar_border"
            android:layout_weight="8">

            <android.support.v7.widget.Toolbar
                android:id="@+id/topToolBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageButton
                        android:id="@+id/bluetooth_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:src="@drawable/ic_bluetoothicon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:background="@color/colorBlue"
                        android:text="@string/app_name"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@color/colorBlue"
                        android:scaleType="fitCenter"
                        android:src="@drawable/threedroplets" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="54"
            android:background="@drawable/borders">

            <ProgressBar
                android:id="@+id/circle_progress"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:progress="62"
                android:progressDrawable="@drawable/progress_bar_circular"
                android:rotation="-90"/>

            <TextView
                android:id="@+id/text_percent_drank"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/progress"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/text_fraction_drank"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/circle_progress"
                android:gravity="center"
                android:text="@string/progress_detail"
                android:textAlignment="center"
                android:textSize="30sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:weightSum="2"
            android:layout_weight="30"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/borders"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="8">

                <ImageView
                    android:id="@+id/left_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_blueclock"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/left_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/home_left_text"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/borders"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="8">

                <ImageView
                    android:id="@+id/right_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_drinkcup"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/right_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/home_right_text"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="3"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/toolbarBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_weight="8">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navbarBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_navbar_border"
                app:menu="@menu/bottom_navigation_menu">


            </android.support.design.widget.BottomNavigationView>

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
